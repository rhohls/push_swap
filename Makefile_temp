CHECK = checker
PUSHSWAP = push_swap

SRCS_PATH = ./src/
SRCS_CHECK_PATH = ./src_check/
SRCS_PUSHSWAP_PATH = ./src_push/
OBJF_PATH = ./objs/

CCF = -Wall -Werror -Wextra
CC = gcc $(CCF)
LIBFT = ./libft/libft.a

SRC_FILES = $(SRCS_PATH)*.c
CHECK_FILES =  $(SRCS_CHECK_PATH)*.c
PUSHSWAP_FILES = $(SRCS_PUSHSWAP_PATH)*.c

OBJS = $(FILES: .c=.o)

#SRCS = $(addprefix )
SRCS_CHECK = $(addprefix $(CHECK_FILES))) 
SRCS_PUSHSWAP = ./src_push/








$(CHECK): compile
	make -C libft
	$(CC) -o $(CHECK) $(SRCS)$(OBJS) $(LIBFT)
	#$(OBJF)$(OBJS)

compile_check: $(OBJ)
	$(CC) -c $(SRCS)$(FILES) $(CCF)



all: $(CHECK) $(PUSHSWAP)

clean:
	/bin/rm -f $(OBJF)*.o

fclean: clean
	/bin/rm -f $(NAME)

re: fclean all

.PHONY: re fclean clean all test clean



